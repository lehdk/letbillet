<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="350.0" prefWidth="375.0" stylesheets="@Login.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.letbillet.presentation.controller.NewUserController">
    <children>
        <Label layoutX="112.0" layoutY="14.0" styleClass="white" text="New User">
            <font>
                <Font size="43.0" />
            </font></Label>
        <Label layoutX="29.0" layoutY="107.0" text="Username">
            <font>
                <Font size="18.0" />
            </font></Label>
        <Label layoutX="34.0" layoutY="154.0" text="Password">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="113.0" layoutY="108.0" prefHeight="25.0" prefWidth="224.0" styleClass="input" >
            <font>
                <Font size="13.0" />
            </font></TextField>
        <PasswordField fx:id="passwordField" layoutX="113.0" layoutY="155.0" prefHeight="25.0" prefWidth="224.0" styleClass="input" >
            <font>
                <Font size="13.0" />
            </font></PasswordField>
        <Button fx:id="cancelButton" layoutX="90.0" layoutY="284.0" mnemonicParsing="false" onAction="#handleCloseWindow" text="Cancel" />
        <Button fx:id="createUserButton" layoutX="225.0" layoutY="284.0" mnemonicParsing="false" onAction="#handleCreateUser" text="Create" />
        <Label fx:id="badUsernameOrPasswordLabel" layoutX="81.0" layoutY="309.0" text="Bad username or password!" visible="false">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
      <Label layoutX="53.0" layoutY="205.0" text="Repeat">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordRepeat" layoutX="113.0" layoutY="204.0" prefHeight="25.0" prefWidth="224.0" styleClass="input" >
         <font>
            <Font size="13.0" />
         </font>
      </PasswordField>
    </children>
</AnchorPane>
